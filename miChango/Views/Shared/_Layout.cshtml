<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - miChango</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")


</head>
<body class="body">
    <header>
        <div class="barra">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <nav class="navbar navbar-expand-md navbar-light barra">
                            <img class="logo" src="~/Content/img/miChangoLogo.png" alt="logo " width="200">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                                <ul class="navbar-nav">
                                    <li class="nav-item active">
                                        <a class="nav-link" href="#">
                                            <i class="fas fa-user-plus"></i>
                                            <!-- Poner icono de comprartir -->
                                        </a>
                                    </li>
                                    <li class="nav-item active">
                                        <a class="nav-link" href="#">
                                            <!-- Poner icono de comprartir -->
                                        </a>
                                    </li>
                                    <a href="@Url.Action("LogOff", "Account")">
                                        <div>Cerrar sesion</div>
                                    </a>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <div class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <!-- Footer Elements -->
                            <!-- Copyright -->
                            <img class="footer" src="~/Content/img/foot.png" alt="footer">
                        </div>
                        <!-- Footer Elements -->
                        <!-- Copyright -->

                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
